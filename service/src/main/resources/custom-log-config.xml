<?xml version="1.0" encoding="UTF-8"?>
<included>
    <springProperty name="name" source="application.name"/>
    <springProperty name="version" source="application.version"/>
    <property name="log-path" value="logs"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%green(%date{"yyyy-MM-dd'T'HH:mm:ss.SSSXXX", UTC}) | %cyan(${name}:${version}) | [%thread] |
                %highlight(%-5level) | %50.50logger{50}:%-5.5line --- %message%n
            </pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

    <appender name="application-logs" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log-path}/${name}.json</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                {
                "logger_time": "%date{\"yyyy-MM-dd'T'HH:mm:ss.SSSXXX\", UTC}",
                "logger_level": "%level",
                "logger_name": "%logger",
                "logger_line": "#asLong{%line}",
                "logger_message": "%message%n%ex{full}",

                "application_name": "${name}",
                "application_version": "${version}"
                }
            </pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${log-path}/${name}_%i.json</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>4</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>500MB</maxFileSize>
        </triggeringPolicy>
    </appender>
    <root level="INFO">
        <appender-ref ref="application-logs"/>
    </root>

</included>